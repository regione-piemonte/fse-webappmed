<ivysettings>
	<settings defaultCache="${basedir}/build/cache" defaultResolver="myUrlResolver"/>
	<resolvers>
		<url name="myUrlResolver">
			<artifact pattern="http://xxx/java/[organisation]/[module]/[revision]/lib/[artifact].[type]" />
			<artifact pattern="http://xxx/java/[organisation]/[module]/[revision]/conf/[artifact].[type]" />

			<artifact pattern="http://xxx/java/[organisation]/[module]/lib/[artifact].[type]" />

			<ivy pattern="http://xxx/java/[organisation]/[module]/[revision]/ivy-[module].xml" />
			<ivy pattern="http://xxx/java/[organisation]/[module]/ivy-[module].xml" />
		</url>
	</resolvers>
</ivysettings>
